<h1><%= @list.name %>'s movies</h1>

<ol>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
    <%= bookmark.comment %>
    <%= link_to 'Delete movie', bookmark_path(bookmark),
                                method: :delete,
                                data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ol>

<%= link_to "Back to the list", list_path(@list) %>
