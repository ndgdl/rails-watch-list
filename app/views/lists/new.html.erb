<div class="container mt-3">
  <div class="row">
    <div class="col-6">
      <div class="form shadow mt-3 p-3">
        <%= simple_form_for(@list) do |f| %>
          <h1 class="mb-3">Create a list</h1>
          <%= f.input :name,
            label: "Your new list's name:",
            placeholder: "Classics, Advices from colleagues, ... " %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
