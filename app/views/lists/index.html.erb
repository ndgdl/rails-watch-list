<div class="container">
  <div class="header d-flex align-items-center justify-content-between my-3">
    <h1 class="m-0">All lists</h1>
    <%= link_to "Create a List", new_list_path, class: "btn btn-outline-primary" %>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.img_url %>)">
        <%= link_to list_path(list), class: "card-name-link" do%>
          <%= list.name %>
        <% end %>
        <%= link_to "+", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
      </div>
    <% end %>
  </div>
</div>
